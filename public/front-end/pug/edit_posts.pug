doctype
html
    head
        title Edit post
        link(rel="stylesheet" href="/front-end/css/bootstrap.min.css")
        link(rel="stylesheet" href="/front-end/font-awesome/css/font-awesome.min.css")
        link(rel="stylesheet" href="/front-end/css/custom.css")
    body
        div(class="container")
            br
            form(action="/posts/edit" method="post")
                input(type="hidden" value=post._id name="post_id")
                div(class="form-group")
                    textarea(class="form-control" name="body" rows=10) #{post.body}
                div(class="form-group")
                    input(type="submit" value="Update" class="form-control btn btn-sm btn-success")


