doctype
html
    head
        title Leave a comment
        link(rel="stylesheet" href="/front-end/css/bootstrap.min.css")
        link(rel="stylesheet" href="/front-end/font-awesome/css/font-awesome.min.css")
        link(rel="stylesheet" href="/front-end/css/custom.css")
    body
        div(class="container")
            br
            form(action="/posts/comments" method="post")
                div(class="form-group")
                    input(type="hidden" value=post name="post_id")
                    input(type="text" name="comment" placeholder="leave a comment"  class="form-control")
                div(class="form-group")
                    input(type="submit" value="comment" class="form-control btn btn-sm btn-success")